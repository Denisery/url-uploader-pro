# Telegram Bot Token from BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Pyrogram API credentials (get from https://my.telegram.org/apps)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Download directory for temporary files
DOWNLOAD_DIR=./downloads

# Security settings
# Enable user authentication (true/false)
AUTH_ENABLED=false

# Comma-separated list of allowed Telegram user IDs (if AUTH_ENABLED=true)
# Example: ALLOWED_USERS=123456789,987654321
ALLOWED_USERS=

# Comma-separated list of admin Telegram user IDs
# Example: ADMIN_USERS=123456789
ADMIN_USERS=

# Download limits
MAX_CONCURRENT_DOWNLOADS=2
MAX_DOWNLOADS_PER_USER=10

# File size limit in bytes (default: 1.8GB)
MAX_FILE_SIZE=1932735283

# Cleanup settings
CLEANUP_INTERVAL_HOURS=24

# Status API settings
STATUS_PORT=8080